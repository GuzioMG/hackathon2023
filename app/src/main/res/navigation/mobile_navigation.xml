<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_routes">

    <fragment
        android:id="@+id/navigation_routes"
        android:name="com.pribus.driver.ui.routes.RoutesListFragment"
        android:label="Mapa tras"
        tools:layout="@layout/fragment_routes_list" />

    <fragment
        android:id="@+id/navigation_fleet"
        android:name="com.pribus.driver.ui.FleetFragment"
        android:label="Flota - 6 pojazdów"
        tools:layout="@layout/fragment_fleet" />

    <fragment
        android:id="@+id/navigation_billing"
        android:name="com.pribus.driver.ui.BillingFragment"
        android:label="Finanse - Balans konta: 12 836,50 zł"
        tools:layout="@layout/fragment_billing" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.pribus.driver.ui.HistoryFragment"
        android:label="Historia twoich przejazdów"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_rates"
        android:name="com.pribus.driver.ui.rating.RatingFragment"
        android:label="Oceny - Średnia: 4,33 / 5"
        tools:layout="@layout/fragment_rate_list" />
</navigation>